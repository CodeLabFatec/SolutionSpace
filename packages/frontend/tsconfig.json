{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "src",
    "rootDirs": ["src", "test"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"],
      "@/test/*": ["../test/*"]
    }
  },
  "include": ["src", "test"]
}
